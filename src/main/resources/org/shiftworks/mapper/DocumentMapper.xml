<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.shiftworks.mapper.DocumentMapper">
	
	<!--내 게시물 리스트 조회-->
	<select id="getMyDocumentList" resultType="org.shiftworks.domain.PostVO">
		select * from Post where emp_id = #{emp_id}
	</select>
	
	<!--내 게시물 상세보기-->
	<select id="getMyDocument" resultType="org.shiftworks.domain.PostVO">
		select * from Post where emp_id = #{emp_id} and post_id = #{post_id}
	</select>
	
	<!--스크랩 게시물 리스트 조회-->
	<select id="getScrapList" resultType="org.shiftworks.domain.ScrapVO">
		select * from Scrap where emp_id = #{emp_id}
	</select>
	
	<!--스크랩 게시물 상세보기 -->
	<select id="getScrap" resultType="org.shiftworks.domain.ScrapVO">
		select * from Scrap where emp_id= #{emp_id} and post_id = #{post_id}
	</select>
	
	<!--부서문서함 리스트 조회-->
 	<select id="getDepartmentDocumentList" resultType="org.shiftworks.domain.Dept_DocVO"> 
		select * from Dept_DocVO d, Post p where d.dept_id =p.post_receivedept 
			and d.dept_id = #{dept_id}
	</select>
	
	<!--부서문서 게시물 상세보기-->
		<select id="getDepartmentDocument" resultType="org.shiftworks.domain.Dept_DocVO">
		select * from Dept_DocVO d, Post p where d.dept_id =p.post_receivedept 
			and d.dept_id = #{dept_id} and post_id= #{post_id}
	</select>
	
